@model ASP.NETMVC.Models.LIVRES

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card rounded shadow container col-12 col-lg-8 col-sm-10 mx-auto my-5" style="background-color: #5d6d7e; ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="">
            <h4>Modifier Livre</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_LIVRE)

            <div class="form-group">
                @Html.LabelFor(model => model.ISBN, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control", style = "background-color: #5d6d7e;color:white" } })
                @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TITRE, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.TITRE, new { htmlAttributes = new { @class = "form-control", style = "background-color: #5d6d7e;color:white" } })
                @Html.ValidationMessageFor(model => model.TITRE, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EDITEUR, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.EDITEUR, new { htmlAttributes = new { @class = "form-control", style = "background-color: #5d6d7e;color:white" } })
                @Html.ValidationMessageFor(model => model.EDITEUR, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ANNEE_EDITION, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.ANNEE_EDITION, new { htmlAttributes = new { @class = "form-control", style = "background-color: #5d6d7e;color:white" } })
                @Html.ValidationMessageFor(model => model.ANNEE_EDITION, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_AUTEUR, "ID_AUTEUR", htmlAttributes: new { @class = "control-label" })

                @Html.DropDownList("ID_AUTEUR", null, htmlAttributes: new { @class = "form-control", style = "background-color: #5d6d7e;color:white" })
                @Html.ValidationMessageFor(model => model.ID_AUTEUR, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_GENRE, "ID_GENRE", htmlAttributes: new { @class = "control-label" })

                @Html.DropDownList("ID_GENRE", null, htmlAttributes: new { @class = "form-control", style = "background-color: #5d6d7e;color:white" })
                @Html.ValidationMessageFor(model => model.ID_GENRE, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.ActionLink("Retour", "Index", null, new { @class = "mr-1 my-2 btn btn-info" })
                <input type="submit" value="Valider" class="my-2 mx-2 btn btn-primary" />

            </div>
        </div>
        }
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
