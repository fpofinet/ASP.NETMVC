@model ASP.NETMVC.Models.GENRES

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="card rounded shadow container col-12 col-lg-8 col-sm-10 mx-auto my-5" style="background-color: #5d6d7e; ">
        @using (Html.BeginForm())
         {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Modifier genre</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_GENRE)

                <div class="form-group">
                    @Html.LabelFor(model => model.LIBELLE_GENRE, "libelle", htmlAttributes: new { @class = "control-label" })
                   
                        @Html.EditorFor(model => model.LIBELLE_GENRE, new { htmlAttributes = new { @class = "form-control", style = "background-color: #5d6d7e;color:white" } })
                        @Html.ValidationMessageFor(model => model.LIBELLE_GENRE, "", new { @class = "text-danger" })
                   
                </div>

                <div class="form-group">
                    @Html.ActionLink("Retour", "Index",null,new {@class="my-3 btn btn-info" })
                    <input type="submit" value="Enregistrer" class="my-3 mx-1 btn btn-primary" />

                </div>
            </div>
         }

    </div>
</div>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
