@model ASP.NETMVC.Models.GENRES

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card rounded shadow container col-12 col-lg-6 col-sm-10 mx-auto my-5" style="background-color: #5d6d7e; ">
        @using (Html.BeginForm())
         {
            @Html.AntiForgeryToken()
            
            <div class="form-horizontal">
                <h4>Ajouter Un genre Litteraire</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.LIBELLE_GENRE, "Libelle", htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.EditorFor(model => model.LIBELLE_GENRE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LIBELLE_GENRE, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.ActionLink("Retour", "Index", null, new { @class = "my-4 btn btn-info" })
                    <input type="submit" value="Enregistrer" class="my-4 mx-2 btn btn-primary" />
                </div>
            </div>
         }
    </div>
</div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
