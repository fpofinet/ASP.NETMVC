@model ASP.NETMVC.Models.COURANTS

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card rounded shadow container col-12 col-lg-8 col-sm-10 mx-auto my-5" style="background-color: #5d6d7e; ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Modifier Courant</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_COURANT)

                <div class="form-group">
                    @Html.LabelFor(model => model.ID_GENRE, "Genre", htmlAttributes: new { @class = "control-label col-md-2" })
                    
                        @Html.DropDownList("ID_GENRE", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ID_GENRE, "", new { @class = "text-danger" })
                  
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LIBELLE_COURANT, "Libelle", htmlAttributes: new { @class = "control-label col-md-2" })
                   
                        @Html.EditorFor(model => model.LIBELLE_COURANT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LIBELLE_COURANT, "", new { @class = "text-danger" })
                  
                </div>

                <div class="form-group">
                    @Html.ActionLink("Retour", "Index",null,new { @class="btn btn-info my-3"})
                    <input type="submit" value="Enregistrer" class="btn btn-primary my-3 mx-2" />
               
                </div>
            </div>
         }
    </div>
</div>


        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
